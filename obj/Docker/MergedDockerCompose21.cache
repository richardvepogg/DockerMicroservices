name: dockercompose4211038798307402717
services:
  apirefit:
    build:
      context: F:\Projetos\DockerMicroservices
      dockerfile: APIRefit\Dockerfile
    container_name: apiRefit
    depends_on:
      sqlserver:
        condition: service_started
        required: true
    image: api-refit
    networks:
      rederefit:
        ipv4_address: 172.18.0.4
    ports:
      - mode: ingress
        target: 5000
        published: "5000"
        protocol: tcp
  cadastroproduto:
    build:
      context: F:\Projetos\DockerMicroservices
      dockerfile: CadastroProduto\Dockerfile
    container_name: cadastroProduto
    depends_on:
      sqlserver:
        condition: service_started
        required: true
    image: api-cadastroproduto
    networks:
      rederefit:
        ipv4_address: 172.18.0.5
    ports:
      - mode: ingress
        target: 5010
        published: "5010"
        protocol: tcp
  mssqltools:
    command:
      - /bin/bash
      - -c
      - sleep 60 && /opt/mssql-tools/bin/sqlcmd -S sqlserver -U SA -P cadastroprodutos123! -d master -i /tmp/CriarBancoEstoque.sql
    depends_on:
      sqlserver:
        condition: service_started
        required: true
    image: mcr.microsoft.com/mssql-tools
    networks:
      rederefit:
        ipv4_address: 172.18.0.7
    volumes:
      - type: bind
        source: F:\Projetos\DockerMicroservices\CriarBancoEstoque.sql
        target: /tmp/CriarBancoEstoque.sql
        bind:
          create_host_path: true
  sqlserver:
    container_name: sqlserver
    environment:
      ACCEPT_EULA: "Y"
      MSSQL_PID: Developer
      MSSQL_SA_PASSWORD: cadastroprodutos123!
    expose:
      - "1433"
    hostname: hostsqlserver
    image: mcr.microsoft.com/mssql/server:2022-latest
    networks:
      rederefit:
        ipv4_address: 172.18.0.6
    ports:
      - mode: ingress
        target: 1433
        published: "1433"
        protocol: tcp
    volumes:
      - type: bind
        source: F:\Projetos\DockerMicroservices\volumes
        target: /var/opt/mssql/data
        bind:
          create_host_path: true
networks:
  rederefit:
    name: dockercompose4211038798307402717_rederefit
    driver: bridge
    ipam:
      driver: default
      config:
        - subnet: 172.18.0.0/16